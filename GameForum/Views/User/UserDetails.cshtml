@model GameForum.Application.ViewModels.Users.UserDetailsVm

@{
    ViewData["Title"] = "UserDetails";
}

<h1>UserDetails</h1>

<div>
    <h4>@Html.DisplayFor(model => model.UserName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<br />
<h2>Blog Posts:</h2>
@if (Model.Posts != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Created
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Posts)
            {
                <tr>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Read" asp-controller="Blog"
                           asp-route-id="@item.Id">@item.Title</a>
                    </td>
                    <td>
                        @item.CreateTime.Date.ToShortDateString()
                    </td>

                </tr>
            }
        </tbody>
    </table>
}

<div>

    <a class="btn btn-info" asp-action="Index">Back to user list</a>
</div>
